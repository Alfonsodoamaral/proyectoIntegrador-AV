<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
	
</head>
<body>
	<!-- Header -->
	<% if(locals.usuario != undefined){ %>
		<%- include('./partials/headerLogeado') %>
	<% } %>
	<% if(locals.usuario == undefined){ %>
		<%- include('./partials/headerNoLogeadoi') %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if(locals.usuario != undefined){ %>
					<img src="<%= usuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombre %>
						<%= usuario.nombre %>

						<a href=""></a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<!-- Preguntar que va aca -->
						 <li><%=usuario.email %></li>
						<li><%=usuario.Producto.length %>productos</li>
						<li>200 seguidores</li>
						<li> <%= usuario.Comentario.length %>Comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			
				<% for(let i=0; i < usuario.Producto.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= usuario.producto[i].id %>">
							<figure class="product-box_image">
								<img src="<%= usuario.Producto[i].imagen %>" alt="<%= usuario.Producto[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= usuario.Producto[i].nombre %></h2>
								<p><%= usuario.Producto[i].descripcion %></p>
								<p><%= usuario.Producto[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>



	<!-- footer -->
	<%-include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>