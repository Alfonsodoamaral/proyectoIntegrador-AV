<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
	
</head>

<body>
	<!-- Header -->
	<% if(locals.usuario != undefined){ %>
		<%- include('./partials/headerLogeado') %>
	<% } %>
	<% if(locals.usuario == undefined){ %>
		<%- include('./partials/headerNoLogeadoi') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			 <section>
				<h2 class="col-12"> 
					<form action="/products/agregar" method="POST">
						<label for="image" class="form-label">Imagen</label>
						<input type="file" id="image" name="image" class="form-input">
	
						<label for="NDP" class="form-label">Nombre de producto: </label>
						<input type="texto" id="NDP" name="nombre_producto" class="form-input">
	
						<label for="DDP" class="form-label">Descripcion del Producto</label>
						<input type="text" id="DDP" name="descripcion_producto" class="form-input">
	
						<button type="submit">Agregar Producto</button>
					</form>
				</h2>
			 </section>
			
		</div>
	</div>

	<!-- footer -->
	
	<%- include('./partials/footer') %>
	<!-- /footer -->
	
</body>

</html>